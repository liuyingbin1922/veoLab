{
  "id": "kids-english-word.v1",
  "version": "1.0.0",
  "type": "word",
  "title": "Kids English Word Segments",
  "description": "Generate a bilingual EN narration + ZH subtitle storyboard for a single vocabulary word. 9:16 vertical, every beat is 6 seconds.",
  "lang_pair": "en+zh",
  "segment_seconds": 6,
  "prompt": "You are a kids English video coach. Teach the target word with 4 beats: hook, pronunciation+meaning, usage, quiz+CTA. Each beat is exactly 6 seconds. Narration is natural spoken EN, subtitles are Simplified Chinese. Shots must describe playful classroom visuals with confident camera cues. Include Veo prompts that mention 9:16, lighting, art direction, age-appropriate children, and color mood. Provide zh answers for quizzes.",
  "output_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
      "meta",
      "lesson",
      "storyboard",
      "veo_segments"
    ],
    "properties": {
      "meta": {
        "type": "object",
        "required": [
          "id",
          "type",
          "key",
          "grade",
          "lang_pair",
          "aspect_ratio",
          "segment_seconds",
          "seo"
        ],
        "properties": {
          "id": { "type": "string" },
          "type": { "const": "word" },
          "key": { "type": "string" },
          "grade": { "type": "string" },
          "lang_pair": { "const": "zh+en" },
          "aspect_ratio": { "const": "9:16" },
          "segment_seconds": { "type": "integer", "enum": [6] },
          "seo": {
            "type": "object",
            "required": [
              "title_en",
              "title_zh",
              "description_en",
              "description_zh",
              "faq"
            ],
            "properties": {
              "title_en": { "type": "string" },
              "title_zh": { "type": "string" },
              "description_en": { "type": "string" },
              "description_zh": { "type": "string" },
              "faq": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": [
                    "question_en",
                    "answer_en",
                    "question_zh",
                    "answer_zh"
                  ],
                  "properties": {
                    "question_en": { "type": "string" },
                    "answer_en": { "type": "string" },
                    "question_zh": { "type": "string" },
                    "answer_zh": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      },
      "lesson": {
        "type": "object",
        "required": [
          "word",
          "translation",
          "phonics",
          "part_of_speech",
          "definition_en",
          "definition_zh",
          "examples"
        ],
        "properties": {
          "word": { "type": "string" },
          "translation": { "type": "string" },
          "phonics": { "type": "string" },
          "part_of_speech": { "type": "string" },
          "definition_en": { "type": "string" },
          "definition_zh": { "type": "string" },
          "examples": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["en", "zh"],
              "properties": {
                "en": { "type": "string" },
                "zh": { "type": "string" }
              }
            }
          }
        }
      },
      "storyboard": {
        "type": "array",
        "minItems": 4,
        "maxItems": 6,
        "items": {
          "type": "object",
          "required": [
            "id",
            "sec",
            "title",
            "english_line",
            "chinese_line",
            "visual_prompt",
            "veo_prompt",
            "camera",
            "shot_type",
            "bgm",
            "note"
          ],
          "properties": {
            "id": { "type": "string" },
            "sec": { "type": "integer", "enum": [6] },
            "title": { "type": "string" },
            "english_line": { "type": "string" },
            "chinese_line": { "type": "string" },
            "visual_prompt": { "type": "string" },
            "veo_prompt": { "type": "string" },
            "camera": { "type": "string" },
            "shot_type": { "type": "string" },
            "bgm": { "type": "string" },
            "note": { "type": "string" }
          }
        }
      },
      "veo_segments": {
        "type": "array",
        "minItems": 4,
        "items": {
          "type": "object",
          "required": [
            "id",
            "sec",
            "veo_prompt",
            "negative_prompt",
            "voiceover_en",
            "subtitle_zh"
          ],
          "properties": {
            "id": { "type": "string" },
            "sec": { "type": "integer", "enum": [6] },
            "veo_prompt": { "type": "string" },
            "negative_prompt": { "type": "string" },
            "voiceover_en": { "type": "string" },
            "subtitle_zh": { "type": "string" }
          }
        }
      }
    }
  }
}
